@model IEnumerable<App.Nomina.Data.Entities.Department>
@{
    ViewData["Title"] = "Departamentos";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-10">
        <div class="card shadow-sm fade-in">
            <div class="card-body">
                <h2 class="mb-4"><i class="bi bi-building"></i> Departamentos</h2>
                <div class="d-flex justify-content-end mb-3">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Nuevo Departamento
                    </a>
                </div>
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.DeptNo</td>
                                <td>@d.DeptName</td>
                                <td>
                                    @if (d.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@d.DeptNo" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@d.DeptNo" class="btn btn-outline-secondary btn-sm me-1">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    @if (d.Activo)
                                    {
                                        <a asp-action="Deactivate" asp-route-id="@d.DeptNo" class="btn btn-outline-danger btn-sm" onclick="return confirm('¿Desactivar este departamento?')">
                                            <i class="bi bi-x-circle"></i> Desactivar
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Activate" asp-route-id="@d.DeptNo" class="btn btn-outline-success btn-sm" onclick="return confirm('¿Activar este departamento?')">
                                            <i class="bi bi-check-circle"></i> Activar
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

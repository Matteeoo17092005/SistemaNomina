@{
    ViewData["Title"] = "Inicio";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm fade-in">
            <div class="card-body text-center">
                <h1 class="display-4 mb-3"><i class="bi bi-building"></i> Bienvenido al Sistema de Nómina</h1>
                <p class="lead">Administra empleados, salarios y reportes de manera fácil y segura.</p>
                <hr />
                <div class="row mt-4">
                    <div class="col-md-4 mb-3">
                        <a href="/Employees" class="btn btn-outline-primary btn-lg w-100">
                            <i class="bi bi-people"></i> Empleados
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="/Reports/CambiosSalariales" class="btn btn-outline-success btn-lg w-100">
                            <i class="bi bi-file-earmark-text"></i> Reportes
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="/Departamentos" class="btn btn-outline-info btn-lg w-100">
                            <i class="bi bi-building"></i> Departamentos
						</a>
					</div>
                    <div class="col-md-4 mb-3">
                        <a href="/Titles" class="btn btn-outline-secondary btn-lg w-100">
                            <i class="bi bi-person-plus"></i> Titulos
						</a>
					</div>


                    @if (!User.Identity?.IsAuthenticated ?? true)
                    {
                        <div class="col-md-4 mb-3">
                            <a href="/Auth/Login" class="btn btn-outline-dark btn-lg w-100">
                                <i class="bi bi-box-arrow-in-right"></i> Ingresar
                            </a>
                        </div>
                    }
                </div>
                <p class="mt-4 text-muted">&copy; @DateTime.Now.Year - Sistema de Nómina</p>
            </div>
        </div>
    </div>
</div>

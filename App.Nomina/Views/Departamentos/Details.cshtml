@model App.Nomina.Data.Entities.Department
@{
    ViewData["Title"] = "Detalles del Departamento";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm fade-in">
            <div class="card-body">
                <h2 class="mb-4"><i class="bi bi-building"></i> Detalles del Departamento</h2>
                <dl class="row">
                    <dt class="col-sm-4">Código</dt>
                    <dd class="col-sm-8">@Model.DeptNo</dd>
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.DeptName</dd>
                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        @if (Model.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.DeptNo" class="btn btn-primary me-2">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    @if (Model.Activo)
                    {
                        <a asp-action="Deactivate" asp-route-id="@Model.DeptNo" class="btn btn-danger" onclick="return confirm('¿Desactivar este departamento?')">
                            <i class="bi bi-x-circle"></i> Desactivar
                        </a>
                    }
                    else
                    {
                        <a asp-action="Activate" asp-route-id="@Model.DeptNo" class="btn btn-success" onclick="return confirm('¿Activar este departamento?')">
                            <i class="bi bi-check-circle"></i> Activar
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

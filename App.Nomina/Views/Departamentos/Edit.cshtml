@model App.Nomina.Data.Entities.Department
@{
    ViewData["Title"] = "Editar Departamento";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm fade-in">
            <div class="card-body">
                <h2 class="mb-4"><i class="bi bi-pencil"></i> Editar Departamento</h2>
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="DeptNo" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="DeptNo" class="form-label">Código</label>
                        <input asp-for="DeptNo" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="DeptName" class="form-label">Nombre</label>
                        <input asp-for="DeptName" class="form-control" required maxlength="50" />
                        <span asp-validation-for="DeptName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

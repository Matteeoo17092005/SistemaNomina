@model App.Nomina.Data.Entities.Employee
@{
    ViewData["Title"] = "Detalles del Empleado";
    System.Globalization.CultureInfo cultura = new System.Globalization.CultureInfo("es-ES");
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm fade-in">
            <div class="card-body">
                <h2 class="mb-4"><i class="bi bi-person"></i> Detalles del Empleado</h2>
                <dl class="row">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
                    <dt class="col-sm-4">Cédula</dt>
                    <dd class="col-sm-8">@Model.Ci</dd>
                    <dt class="col-sm-4">Correo</dt>
                    <dd class="col-sm-8">@Model.Correo</dd>
                    <dt class="col-sm-4">Fecha de Nacimiento</dt>
                    <dd class="col-sm-8">@Model.BirthDate.ToString("dd 'de' MMMM 'de' yyyy", cultura)</dd>
                    <dt class="col-sm-4">Fecha de Ingreso</dt>
                    <dd class="col-sm-8">@Model.HireDate.ToString("dd 'de' MMMM 'de' yyyy", cultura)</dd>
                    <dt class="col-sm-4">Género</dt>
                    <dd class="col-sm-8">@Model.Gender</dd>
                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        @if (Model.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>
                <hr />
                <h4 class="mb-3"><i class="bi bi-currency-dollar"></i> Salario Actual</h4>
                <div>
                    @if (ViewBag.SalarioActual != null)
                    {
                        <span class="fs-5 fw-bold text-success">$@((decimal)ViewBag.SalarioActual).ToString("N2", cultura)</span>
                    }
                    else
                    {
                        <span class="text-muted">No tiene salario asignado.</span>
                    }
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    @if (Model.Activo)
                    {
                        <a asp-controller="Salaries" asp-action="Create" asp-route-empNo="@Model.EmpNo" class="btn btn-success">
                            <i class="bi bi-currency-dollar"></i> Asignar/Modificar Salario
                        </a>
                    }
                    @if (!Model.Activo && (User.IsInRole("Administrador") || User.IsInRole("RRHH")))
                    {
                        <a asp-action="Activate" asp-route-id="@Model.EmpNo" class="btn btn-success ms-2"
                           onclick="return confirm('¿Está seguro de activar este empleado?')">
                            <i class="bi bi-person-check"></i> Activar
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

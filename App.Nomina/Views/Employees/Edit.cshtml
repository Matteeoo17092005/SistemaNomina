@model App.Nomina.Data.Entities.Employee
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm fade-in">
            <div class="card-body">
                <h2 class="mb-4"><i class="bi bi-person-gear"></i> Editar Empleado</h2>
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="EmpNo" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Ci" class="form-label">Cédula</label>
                        <input asp-for="Ci" class="form-control" required />
                        <span asp-validation-for="Ci" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">Nombres</label>
                            <input asp-for="FirstName" class="form-control" required maxlength="50" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Apellidos</label>
                            <input asp-for="LastName" class="form-control" required maxlength="50" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                        <input asp-for="Correo" type="email" class="form-control" required />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="BirthDate" class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="BirthDate" type="date" class="form-control" required />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label">Género</label>
                            <select asp-for="Gender" class="form-select" required>
                                <option value="">Seleccione...</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                                <option value="O">Otro</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HireDate" class="form-label">Fecha de Ingreso</label>
                        <input asp-for="HireDate" type="date" class="form-control" required />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label">Activo</label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}